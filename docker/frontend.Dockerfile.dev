FROM node:12

RUN npm install -g mocha chai react-scripts

RUN mkdir -p /do-dydns/frontend

# install the frontend dependencies
WORKDIR /do-dydns/frontend
COPY package.json package.json
RUN npm install
RUN npm install -D

# expose the ports
EXPOSE $PORT

# copy the application
COPY . .

CMD ["npm", "start"]
