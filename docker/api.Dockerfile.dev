FROM node:12

RUN npm install -g mocha chai

RUN mkdir -p /do-dydns/api

# install the api dependencie
WORKDIR /do-dydns/api
COPY package.json package.json
RUN npm install

# expose the ports
EXPOSE 9229
EXPOSE 3080

# copy the application
COPY . .

CMD ["node", "--inspect=0.0.0.0:9229", "index.js"]
