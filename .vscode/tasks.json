{
  "tasks": [
    {
      "label": "Build and Run (Development)",
      "type": "shell",
      "command": "make",
      "args": [
        "dev"
      ],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "frontend-dev_\\d+\\s*\\|\\s*Compiled successfully!",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "building",
            "endsPattern": ".*Compiled successfully!",
          }
        }
      ]
    },
    {
      "label": "Terminate All Tasks",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}