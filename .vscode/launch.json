  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start",
        "api"
      ],
      "port": 7777,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}",
      "localRoot": "${workspaceFolder}/apps/api/src/**/*.ts"
    }
  ]
}